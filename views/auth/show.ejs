<%- include("../partials/header.ejs") %>
  <!-- Navigation -->
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal"><a href="/"><img class="img-fluid logo" src="/images/logo-horizontal.png" alt=""></a></h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-dark" href="/">Menu</a>
      <a class="p-2 text-dark" href="#">Tracker</a>
      <% if(user) { %>
      <a class="p-2 text-dark" href="#">View Orders</a>
    </nav>
      <form action="/logout?_method=DELETE" method="POST">
        <input class="btn btn-outline-primary" type="submit" value="Logout" />
      </form>
    <% } else { %>
      <a href="/login">Login</a> | <a href="/register">Register</a>
      <% } %>
  </div>
  <!-- END Navigation -->

  <!-- Main -->
  <div class="main">
    <div class="container">
      <div class="row">
        <h1>User Account</h1>
        <div class="row row-cols-1 row-cols-md-1">
          <div class="col mb-12">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">
                  <%= user.username %> 
                </h5>

                <% if(user) { %>
                
                <!-- Welcome logged in - TEST to verify info -->
                <p class="card-text">
                  <span><b>Email:</b> <%= user.email %> </span><br>
                  <span><b>Address:</b> <%= user.address %> </span><br>
                  <span><b>City:</b> <%= user.city %> </span>
                  <span><b>State:</b> <%= user.state %> </span>
                  <span><b>Zip:</b> <%= user.zip %> </span><br>
                  <span><b>Credit Card:</b> <%= user.ccNum %> </span><br>
                  <span><b>CCV:</b> <%= user.ccv %> </span>
                  <span><b>Expiry:</b> <%= user.expiry %> </span>
                </p>
                <a name="" id="" class="btn btn-primary" href="/auth/<%= user.id %>/edit " role="button">Edit Account</a>
                <!-- END Welcome logged in -->

                <% } else { %>
                <!-- Welcome not logged in. -->
                <p>
                  Our pizza is outta this world.
                  <% } %>
                </p>
                <!-- END Welcome not logged in -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END Main -->

<%- include("../partials/footer.ejs") %>
