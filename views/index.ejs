<%- include("partials/header.ejs") %>
  <!-- Navigation -->
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal"><img class="img-fluid logo" src="/images/logo-horizontal.png" alt=""></h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-dark" href="#">Menu</a>
      <a class="p-2 text-dark" href="#">Tracker</a>
      <% if(user) { %>
      <a class="p-2 text-dark" href="/auth/<%= user.id %>">View Account</a>
      <a class="p-2 text-dark" href="#">View Orders</a>
    </nav>
      <form action="/logout?_method=DELETE" method="POST">
        <input class="btn btn-outline-primary" type="submit" value="Logout" />
      </form>
    <% } else { %>
      <a href="/login">Login</a> | <a href="/register">Register</a>
      <% } %>
  </div>
  <!-- END Navigation -->

  <!-- Main -->
  <div class="main">
    <div class="container">
      <div class="row">
        <div class="row row-cols-1 row-cols-md-1">
          <div class="col mb-12">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">
                  <% if(user) { %>
                    Welcome, <%= user.username %> 
                  <% } else { %>
                    Welcome to Planet Pizza!
                    <% } %>
                </h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END Main -->

<%- include("partials/footer.ejs") %>
