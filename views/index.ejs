<%- include("partials/header.ejs") %>
  <!-- Navigation -->
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-dark border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal"><img class="img-fluid logo" src="/images/logo-horizontal.png" alt=""></h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-white" href="#">Menu</a>
      <a class="p-2 text-white" href="#">Tracker</a>
      <% if(user) { %>
        <!-- Example single danger button -->
<div class="btn-group">
  <div class="button-group dropleft">

  <button class="btn btn-danger btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    My Account
  </button>

  <div class="dropdown-menu">
    <a class="dropdown-item" href="/auth/<%= user.id %>">View Account</a>
    <a class="dropdown-item" href="/auth/<%= user.id %>/edit">Edit Account</a>
    <a class="dropdown-item" href="/orders/">View Orders</a>
    <div class="dropdown-divider"></div>
        <form action="/logout?_method=DELETE" method="POST">
        <input class="dropdown-item" type="submit" value="Logout" />
      </form>
  </div>
</div>
</div>
    </nav>
  
    <% } else { %>
      <div class="btn-group btn-group-toggle" data-toggle="buttons">
      <a class="btn btn-sm btn-outline-danger" href="/login">Login</a> 
      
      <a class="btn btn-sm btn-outline-danger" href="/register">Register</a>
      </div>
      <% } %>

  </div>
  <!-- END Navigation -->

  <!-- Main -->
  <div class="main">
    <div class="container">
      <div class="row">
        <div class="row row-cols-1 row-cols-md-1">
          <div class="col mb-12">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">
                  <% if(user) { %>
                    Welcome, <%= user.username %> 
                  <% } else { %>
                    Welcome to Planet Pizza!
                    <% } %>
                </h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END Main -->

<%- include("partials/footer.ejs") %>
